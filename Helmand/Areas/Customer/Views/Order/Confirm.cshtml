@model Helmand.Models.ViewModels.OrderDetailsViewModel
@{
    ViewData["Title"] = "Confirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row px-3">
    <div class="col-8">
        <h2 class="text-info">Order Submission Confirmed</h2>
    </div>
    <div class="col-4 text-right">
        <a asp-action="Index" asp-controller="Home" class="btn btn-success form-control">New Order</a>

    </div>
    @if (Model.OrderHeader != null)
    {
        <div class="p-3">
            Your order has been confirmed ! Please see the order summary below.
            <br />
        </div>
        <br />
        <br />
        <partial name="_IndividualOrderDetails" model="Model" />
    }
    else
    {
        <div class="text-danger">Erorr...Please try again.</div>
    }

</div>

