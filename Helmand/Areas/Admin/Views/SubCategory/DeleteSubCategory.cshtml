@model Helmand.Models.ViewModels.SubCategoryAndCategoryViewModel
@using Helmand.Extensions
@{
    ViewData["Title"] = "DeleteSubCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel-body content-form" style="width:600px; margin: auto">
    <h3 style="margin-bottom: 30px">Delete Sub Category</h3>
    <form class="P" asp-action="DeleteSubCategory" method="post">
        <div class="form-group">
            <label asp-for="SubCategory.SubCName">Category Name:</label>
            <input class="form-control" readonly asp-for="SubCategory.SubCName" />
        </div>
        <div class="form-group row">
            <div class="col-5 offset-4">
                <input type="submit" class="btn btn-danger form-control" asp-route-id="@Model.SubCategory.SubCId" value="Delete" />
                <br />
                <a asp-action="Index" class="btn btn-dark form-control">Cancel</a>
            </div>
        </div>
    </form>
</div>

