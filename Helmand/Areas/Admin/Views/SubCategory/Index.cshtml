@model IEnumerable<SubCategory>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<br />
<div class="row">
    <div class="col-6">
        <h3 class="text-info"> Sub Category List</h3>

    </div>
    <div class="col-6 text-right">
        <a asp-action="AddSubCategory" class="btn btn-outline-dark categoryButton "><i class="fas fa-plus"></i> Add Sub Category</a>
    </div>
</div>
<br />
<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered">
            <tr class="table-secondary">
                <th>@Html.DisplayNameFor(m => m.SubCName)</th>
                <th>@Html.DisplayNameFor(m=>m.Category.Name)</th>
                <th>Actions</th>

            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.SubCName)
                    </td>
                    <td>
                        @Html.DisplayFor(m=>item.Category.Name)
                    </td>
                    <td>
                        <partial name="_TableButtonPartial" model="item.Category.Id" />
                    </td>
                </tr>
            }

        </table>
    }
    else
    {
        <p>No Category available !</p>
    }
</div>
