@model Category
@{
    ViewData["Title"] = "DeleteCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />

<div class="panel-body content-form" style="width:600px; margin: auto">
    <h3 style="margin-bottom: 30px">Delete Category</h3>
    <form class="P" asp-action="DeleteCategory" method="post">
        <div class="form-group">
            <label asp-for="Name">Category Name:</label>
            <input class="form-control" readonly asp-for="Name" />
        </div>
        <div class="form-group row">
            <div class="col-5 offset-4">
                <input type="submit" class="btn btn-danger form-control" asp-route-id="@Model.Id" value="Delete" />
                <br />
                <a asp-action="Index" class="btn btn-dark form-control">Cancel</a>
            </div>
        </div>
    </form>
</div>


