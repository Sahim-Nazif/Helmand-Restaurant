@model Coupon
@{
    ViewData["Title"] = "DeleteCoupon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />

<div class="panel-body content-form" style="width:600px; margin: auto">
    <form asp-action="DeleteCoupon" method="post" enctype="multipart/form-data">
        <div class="col-12 border">
            @{
                var base64 = Convert.ToBase64String(Model.Picture);
                var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
            }
            <img src="@imgsrc" style="height:100%; width:100%" />
        </div>
        <fieldset disabled>
            <div class="form-group">
                <label asp-for="Name">Coupon Name:</label>
                <input class="form-control" asp-for="Name" />
            </div>
            <div class="form-group">
                <label asp-for="Picture"></label>
                <input type="file" id="projectImage" name="files" multiple class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CouponType"></label>
                <select asp-for="CouponType" asp-items="Html.GetEnumSelectList < Coupon.ECouponType>()" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Discount"></label>
                <input class="form-control" asp-for="Discount" />
            </div>
            <div class="form-group">
                <label asp-for="MinimumAmount"></label>
                <input class="form-control" asp-for="MinimumAmount" />
            </div>
            <div class="form-group">
                <label asp-for="IsActive"></label>
                <input class="form-control" asp-for="IsActive" />
            </div>
        </fieldset>
        <div class="form-group row">
            <div class="col-5 offset-4">
                <input type="submit" class="btn btn-danger form-control" asp-route-id="@Model.Id" value="Delete" />
                <br />
                <a asp-action="Index" class="btn btn-dark form-control">Cancel</a>
            </div>
        </div>
    </form>
</div>

