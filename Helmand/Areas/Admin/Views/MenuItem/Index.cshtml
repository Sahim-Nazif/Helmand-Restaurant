@model IEnumerable<MenuItem>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="row">
    <div class="col-6">
        <h3 class="text-info"> Menu Item List</h3>

    </div>
    <div class="col-6 text-right">
        <a asp-action="AddMenuItem" class="btn btn-outline-dark categoryButton "><i class="fas fa-plus"></i> Add MenuItem</a>
    </div>
</div>
<br />
<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered">
            <tr class="table-secondary">
                <th>@Html.DisplayNameFor(m => m.Name)</th>
                <th>@Html.DisplayNameFor(m => m.Price)</th>
                <th>@Html.DisplayNameFor(m => m.CategoryId)</th>
                <th>@Html.DisplayNameFor(m => m.SubCategoryId)</th>
                <th>Actions</th>

            </tr>

            @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(m => item.Name)
            </td>
            <td>
                @Html.DisplayFor(m => item.Price)
            </td>
            <td>
                @Html.DisplayFor(m => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(m => item.SubCategory.SubCName)
            </td>
            <td>
                <partial name="_MenuEditAndDeletePartial" model="item.Id" />
            </td>
        </tr>
            }

        </table>
    }
    else
    {
        <p>No Menu Item available !</p>
    }
</div>
