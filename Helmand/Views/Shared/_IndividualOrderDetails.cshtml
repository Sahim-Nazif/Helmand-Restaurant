
@model Helmand.Models.ViewModels.OrderDetailsViewModel
@using Helmand.Utility

@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<form method="post">
    <div style="padding-top:80px;max-width:100%">
        <div class="container row border ml-1">
            <div class="col-lg-8 col-12" style="border-right:1px solid #bbbb9b">
                <br />
                <input type="hidden" asp-for="OrderHeader.Id" />
                <div class="form-group row">
                    <div class="col-3">
                        <label>Name</label>
                    </div>
                    <div class="col-9">
                        <input asp-for="OrderHeader.PickupName" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="OrderHeader.Application.Email"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="OrderHeader.Application.Email" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="OrderHeader.Application.PhoneNumber"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="OrderHeader.Application.PhoneNumber" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="OrderHeader.OrderTotal"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="OrderHeader.OrderTotal" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="OrderHeader.OrderDate"></label>
                    </div>
                    <div class="col-9">
                        <input value="@Model.OrderHeader.PickUpTime.ToShortDateString() @Model.OrderHeader.PickUpTime.ToShortTimeString()" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="OrderHeader.Comments"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="OrderHeader.Comments" disabled class="form-control" />
                    </div>
                </div>

            </div>
            <div class="col-lg-4 col-12">
                <h4 class="d-flex justify-content-between algin-content-center mb-3">
                    <span class="text-muted">Order Id:</span>
                    <span class="badge badge-secondary badge-fill">@Model.OrderHeader.Id</span>
                </h4>
                <ul class="list-group mb-3">
                    
                    @foreach (var details in Model.OrderDetails)
                    {
                        <li class="list-group-item d-flex justify-content-between">
                            <div>
                                <h6 class="my-0">@details.Name</h6>
                                <small class="text-muted">Quantity: @details.Count</small>
                            </div>
                            <span class="text-muted">@(details.Price * details.Count)</span>
                         
                        </li>
                    }
                    @if(Model.OrderHeader.CouponCode!=null)
                    {
                        <li class="list-group-item d-flex justify-content-between">
                            <div class="text-success">
                                <h6 class="my-0">Promo Code</h6>
                                <small>@Model.OrderHeader.CouponCode</small>
                            </div>
                            <span class="text-success">@(Model.OrderHeader.OrderTotalOriginal-Model.OrderHeader.OrderTotal)</span>
                         
                        </li>
                    }
                      <li class="list-group d-flex justify-content-between bg-light">
                          <span class="text-info">Total (CA)</span>
                          <strong class="text-info">$@Model.OrderHeader.OrderTotal</strong>
                      </li>
                </ul>
                <button  type="submit" disabled class="btn btn-info form-control">@Model.OrderHeader.Status</button>
            </div>

        </div>
      
    </div>
</form>
